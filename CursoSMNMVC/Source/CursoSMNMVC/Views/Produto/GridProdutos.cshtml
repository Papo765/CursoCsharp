@model IEnumerable<CursoSMNMVC.Application.Model.Produto>
@{ Layout = null;}

<table class="striped" id="gridProdutos">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Valor R$</th>
            <th>Estoque</th>
            @*<th>
                <a class="btn-floating waves-effect waves-light red tooltipped" style="float: right" data-poaition="left" data-delay="50" data-tooltip="Novo" href="#!">
                    <i class="material-icon">add_circle</i>
                </a>
            </th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in Model)
        {
                <tr>
                    <td>@produto.CodigoProduto</td>
                    <td>@produto.Nome</td>
                    <td>@produto.Preco</td>
                    <td>@produto.Estoque</td>
                </tr>
        }
    </tbody>
</table>
